<!DOCTYPE html>
<html>
  <head>
    <title>Learning Vim</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag('vim_commands.js') %>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
		<script src="https://d3js.org/d3.v6.min.js"></script>
  </head>

	<div class="sidenav">
		<%= link_to 'Home', root_path, method: :get %>
		&nbsp;&nbsp;&nbsp;<%= link_to 'Vim Commands'.html_safe, vim_commands_path, method: :get %>
		<% if logged_in? %>
			&nbsp;&nbsp;&nbsp;<%= link_to 'New Vim Command'.html_safe, new_vim_command_path, method: :get %>
		<% end %>
		&nbsp;&nbsp;&nbsp;<%= link_to 'Blog'.html_safe, blogs_path, method: :get %>
		&nbsp;&nbsp;&nbsp;<%= link_to 'Hash Tag'.html_safe, hash_tags_path, method: :get %>
		<% if logged_in? %>
			&nbsp;&nbsp;&nbsp;<%= link_to "New Blog", new_blog_path, method: :get %>
		<% end %>
		<% if !logged_in? %>
			&nbsp;&nbsp;&nbsp;<%= link_to 'Log In'.html_safe, static_pages_login_path, method: :get %>
		<% end %>

		<%= form_tag(vim_commands_path, method: :get) do %>
			<%= text_field_tag(:search, params[:search], class: 'nav_search', placeholder: 'Enter a topic') %><br>
			<%= submit_tag("Search") %>
		<% end %>
	</div>


	<body>
		<div class="container">
			<%= yield %>
		</div>
		<!--br>%= debug(params) if Rails.env.development? %-->
	</body>


	<div class="footer navbar-fixed-bottom">
	</div>

</html>
