
<h1 class="page_header">Blog Posts</h1>

<div class="about_div">
	<p class="about">
		These are technical blog posts. They cover whatever tickled my interest at the time.
	</p>
</div>

<div class="card-columns">
	<% @blogs.each do |blog| %>
		<!--%= link_to blog_path(blog.id), :action => 'go' do %-->
			<div class="card">	
				<div class="card-body text-center">
					<h5><%= blog.title %></h5>
					<span style="display: block; width: 200px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">
						<%= blog.post %>
					</span>
					<br>
					<span>
						<% blog.hash_tags.each do |hash_tag| %>
							<%= link_to "##{hash_tag.name}", hash_tag_path(hash_tag.id) %>
					<% end %>
					</span>
					<%= link_to "Show Blog", blog_path(blog.id), :class => "btn btn-light" %>
					<% if logged_in? %>
						<%= link_to "Delete Blog", blog_path(blog.id), method: :delete, data: { conrim: "Are you sure?" }, :class => "btn btn-light" %> 
						<%= link_to "Edit Blog", edit_blog_path(blog.id), :class => "btn btn-light edit_btn" %> 
					<% end %>
				</div>
			<!--% end %-->
		</div>
	<% end %>
</div>


