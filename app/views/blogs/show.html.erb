<h1 class="page_header"><%= @blog.title %></h1>

<br>

<div id="wrapper">
	<div id="first">
		<div class="post">
			<span class="post_text">
				<%= @blog.post %>
			</span>
		</div>
	</div>

	<div id="second">
		<span>
			<% @blog.hash_tags.each do |hash_tag| %>
				<%= link_to "##{hash_tag.name}", hash_tag_path(hash_tag.id), :class => "btn btn-light" %>
			<% end %>
		</span>
	</div> 
</div>

